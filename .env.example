# Environment Configuration for Study Material Service
# Copy this file to .env and customize for your environment

# ============================================================================
# INFRASTRUCTURE
# ============================================================================
HOST_IP=localhost
BACKEND_PORT=8080
FRONTEND_PORT=3000

# ============================================================================
# MONGODB DATABASE
# ============================================================================
MONGO_HOST=mongo
MONGO_PORT=27017
MONGO_DATABASE=study_materials_db
MONGO_URI=mongodb://mongo:27017/study_materials_db

# ============================================================================
# API ENDPOINTS
# ============================================================================
API_URL=http://localhost:8080
NEXT_PUBLIC_API_URL=http://localhost:8080
WIDGET_URL=http://localhost:3000/widget/widget.js

# ============================================================================
# EXTERNAL SERVICES
# ============================================================================
KABBALAHMEDIA_URL=https://kabbalahmedia.info/backend/sqdata
KABBALAHMEDIA_TIMEOUT=120s

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
STORAGE_TYPE=mongodb
DATA_DIR=./data
APP_SCRIPT_PASSWORD=change-me-in-production
MAX_LESSONS_PER_LANGUAGE=5
TEMPLATES_PATH=./templates.json

# ============================================================================
# EMAIL CONFIGURATION
# ============================================================================
# For sending event notifications to Google Group mailing list
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your-gmail@gmail.com
EMAIL_PASSWORD=your-gmail-app-password
EMAIL_FROM=your-gmail@gmail.com
EMAIL_TO=your-group@googlegroups.com
FRONTEND_URL=http://localhost:3000

# ============================================================================
# KEYCLOAK AUTHENTICATION
# ============================================================================
# For Keycloak-based authentication in the admin area
NEXT_PUBLIC_KEYCLOAK_URL=https://accounts.kab.info/auth
NEXT_PUBLIC_KEYCLOAK_REALM=main
NEXT_PUBLIC_KEYCLOAK_CLIENT_ID=study-materials-admin
